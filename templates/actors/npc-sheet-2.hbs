{{!-- Components --}}
{{#*inline "pip"}}
    <button type="button" class="{{ classes }}" data-n="{{ n }}" data-tooltip="{{ tooltip }}" aria-label="{{ label }}"
            aria-pressed="{{ filled }}"></button>
{{/inline}}

<form class="{{ cssClass }}" autocomplete="off">

    {{!-- Header --}}
    <header class="sheet-header">

        {{!-- Portrait & Vitals --}}
        <div class="left">

            {{!-- Portrait --}}
            {{#if editable}}
            <label class="slide-toggle">
                <input type="checkbox" name="flags.n5eb.showTokenPortrait" {{ checked portrait.token }}>
                {{#if portrait.token}}
                    {{ localize "DOCUMENT.Token" }}
                    <i class="fas fa-toggle-on"></i>
                {{else}}
                    {{ localize "N5EB.Portrait" }}
                    <i class="fas fa-toggle-off"></i>
                {{/if}}
            </label>
            {{/if}}

            <div class="portrait {{#if portrait.token}}token{{/if}}">

                <img src="{{ portrait.src }}" alt="{{ actor.name }}"
                     {{#if (and editable portrait.path)}}data-edit="{{ portrait.path }}"{{/if}}>

                <div class="initiative {{#unless editable}}{{ rollableClass }}{{/unless}}"
                    {{#if editable}}data-tooltip="N5EB.InitiativeConfig"
                    aria-label="{{ localize "N5EB.InitiativeConfig" }}"
                    {{else}}data-tooltip="N5EB.Initiative" aria-label="{{ localize "N5EB.Initiative" }}"
                    data-action="rollInitiative"{{/if}}>
                    {{#if editable}}
                        <a class="config-button" data-action="initiative"><i class="fas fa-cog"></i></a>
                    {{else}}
                        <span>
                            {{ n5eb-numberFormat system.attributes.init.total signDisplay="always" }}
                        </span>
                    {{/if}}
                </div>
            </div>

            {{!-- Vitals --}}
            <div class="bottom vitals">

                {{!-- AC --}}
                <div class="left ac">

                    <div class="ac-badge badge" aria-label="{{ localize "N5EB.ArmorClass" }}">
                        {{#if editable}}
                        <a class="config-button" data-action="armor" data-tooltip="N5EB.ArmorConfig"
                           aria-label="{{ localize "N5EB.ArmorConfig" }}">
                            <i class="fas fa-cog"></i>
                        </a>
                        {{else}}
                        <div data-attribution="attributes.ac" data-attribution-caption="N5EB.ArmorClass"
                             data-tooltip-direction="DOWN">
                            {{ system.attributes.ac.value }}
                        </div>
                        {{/if}}
                    </div>

                </div>

                {{!-- HP, HD, & Death Saves --}}
                <div class="right">

                    {{!-- HP --}}
                    {{#with system.attributes.hp}}
                    <div class="meter hit-points sectioned">
                        <div class="progress hit-points 
                        {{#if (gt tempmax 0)}}temp-positive
                        {{else if (lt tempmax 0)}}temp-negative{{/if}}"
                             role="meter" aria-valuemin="0" aria-valuenow="{{ value }}" aria-valuemax="{{ max }}"
                             style="--bar-percentage: {{ pct }}%">
                            <div class="label">
                                <span class="value">{{ value }}</span>
                                <span class="separator">&sol;</span>
                                <span class="max">{{ effectiveMax }}</span>
                                {{#if tempmax}}
                                <span class="bonus">{{ n5eb-numberFormat tempmax signDisplay="always" }}</span>
                                {{/if}}
                                {{#if @root.editable}}
                                <a class="config-button" data-action="hitPoints" data-tooltip="N5EB.HitPointsConfig"
                                   aria-label="{{ localize "N5EB.HitPointsConfig" }}">
                                    <i class="fas fa-cog"></i>
                                </a>
                                {{/if}}
                            </div>
                            <input type="text" name="system.attributes.hp.value" data-dtype="Number" placeholder="0"
                                   value="{{ value }}" inputmode="numeric" pattern="[+=\-]?\d*" hidden>
                        </div>
                        <div class="tmp">
                            <input type="text" name="system.attributes.hp.temp" data-dtype="Number" inputmode="numeric"
                                   placeholder="{{ localize "N5EB.TMP" }}" value="{{ temp }}" pattern="[+=\-]?\d*">
                        </div>
                    </div>
                    {{/with}}

                    {{#with system.attributes.cp}}
                    <div class="meter chakra-points sectioned">
                        <div class="progress chakra-points {{#if (gt tempmax 0)}}temp-positive{{else if (lt tempmax 0)}}temp-negative{{/if}}"
                             role="meter" aria-valuemin="0" aria-valuenow="{{ value }}" aria-valuemax="{{ max }}"
                             style="--bar-percentage: {{ pct }}%">
                            <div class="label">
                                <span class="value">{{ value }}</span>
                                <span class="separator">&sol;</span>
                                <span class="max">{{ effectiveMax }}</span>
                                {{#if tempmax}}
                                <span class="bonus">{{ n5eb-numberFormat tempmax signDisplay="always" }}</span>
                                {{/if}}
                                {{#if @root.editable}}
                                <a class="config-button" data-action="chakraPoints" data-tooltip="N5EB.ChakraPointsConfig"
                                   aria-label="{{ localize "N5EB.ChakraPointsConfig" }}">
                                    <i class="fas fa-cog"></i>
                                </a>
                                {{/if}}
                            </div>
                            <input type="text" name="system.attributes.cp.value" data-dtype="Number" placeholder="0"
                                   value="{{ value }}" inputmode="numeric" pattern="[+=\-]?\d*" hidden>
                        </div>
                        <div class="tmp">
                            <input type="text" name="system.attributes.cp.temp" data-dtype="Number" inputmode="numeric"
                                   placeholder="{{ localize "N5EB.TMP" }}" value="{{ temp }}" pattern="[+=\-]?\d*">
                        </div>
                    </div>
                    {{/with}}

                    {{#if showDeathSaves}}
                    {{!-- HD --}}
                    {{!-- {{#with system.attributes.hd}}
                    <div class="meter hit-dice progress" role="meter" aria-valuemin="0" aria-valuenow="{{ value }}"
                         aria-valuemax="{{ max }}" style="--bar-percentage: {{ pct }}%">
                        <div class="label">
                            <span class="max">{{ max }}</span>
                            <span class="separator">&sol;</span>
                            <span class="value">{{ value }}</span>
                        </div>
                    </div>
                    {{/with}} --}}

                    {{!-- Death Saves --}}
                    <div class="death-saves">

                        {{!-- Death Save Successes --}}
                        <div class="pips" data-prop="system.attributes.death.success">
                            {{#each death.success}}
                                {{> pip}}
                            {{/each}}
                        </div>

                        {{!-- Roll Death Save --}}
                        <button type="button" data-action="rollDeathSave" data-tooltip="N5EB.DeathSaveRoll"
                                aria-label="{{ localize "N5EB.DeathSaveRoll" }}"
                                class="{{ rollableClass }} death-save unbutton">
                            <n5eb-icon src="systems/n5eb/icons/svg/statuses/dead.svg"></n5eb-icon>
                        </button>

                        {{!-- Death Save Failures --}}
                        <div class="pips" data-prop="system.attributes.death.failure">
                            {{#each death.failure}}
                                {{> pip}}
                            {{/each}}
                        </div>

                    </div>
                    {{else}}
                    {{!-- Temp & Tempmax --}}
                    {{!-- {{#with system.attributes.hp}}
                    <div class="meter sectioned split">
                        <div class="temp">
                            
                        </div>
                        <div class="tempmax">
                            <input type="text" name="system.attributes.hp.tempmax" data-dtype="Number"
                                   inputmode="numeric" placeholder="+{{ localize "N5EB.Max" }}" value="{{ tempmax }}"
                                   pattern="[+=\-]?\d*">
                        </div>
                    </div>
                    {{/with}} --}}
                    {{/if}}

                </div>

            </div>

        </div>

        {{!-- Ability Scores & Other Statistics --}}
        <div class="right stats">

            <div class="top">

                {{!-- Name, Type, Size, & Alignment --}}
                <div class="left">

                    {{!-- Name --}}
                    {{#if editable}}
                    <input type="text" name="name" class="document-name uninput" value="{{ actor.name }}">
                    {{else}}
                    <div class="document-name">{{ actor.name }}</div>
                    {{/if}}

                    {{!-- Size, Type, & Alignment --}}
                    <ul class="labels unlist">

                        {{!-- Size --}}
                        <li class="creature-size">
                            {{#if editable}}
                            <select class="unselect" name="system.traits.size">
                                {{ selectOptions config.actorSizes selected=source.traits.size labelAttr="label" }}
                            </select>
                            {{else}}
                            <span>{{ lookup (lookup config.actorSizes system.traits.size) "label" }}</span>
                            {{/if}}
                        </li>

                        {{!-- Type --}}
                        <li class="creature-type">
                            {{#if editable}}
                            <a class="config-button" data-action="type" data-tooltip="N5EB.CreatureTypeConfig"
                               aria-label="{{ localize "N5EB.CreatureTypeConfig" }}">
                                <span>{{ labels.type }}</span>
                                <i class="fas fa-cog"></i>
                            </a>
                            {{else}}
                            <span>{{ labels.type }}</span>
                            {{/if}}
                        </li>

                        {{!-- Alignment --}}
                        <li class="creature-alignment">
                            {{#if editable}}
                            <input type="text" name="system.details.alignment" value="{{ source.details.alignment }}"
                                   placeholder="{{ localize "N5EB.Alignment" }}">
                            {{else}}
                            <span>{{ system.details.alignment }}</span>
                            {{/if}}
                        </li>

                        <li class="creature-size">
                            {{#if editable}}
                                <select class="unselect" name="system.details.npcType">
                                    {{ selectOptions config.creatureNPCTypes selected=source.details.npcType }}
                                </select>
                            {{else}}
                                <span>{{ localize (lookup config.creatureNPCTypes system.details.npcType) }}</span>
                            {{/if}}
                        </li>


                    </ul>

                    {{!-- Rank, Class, Role, Affiliation & High Role --}}
                    {{#if (eq system.details.npcType "adversary")}}
                    <ul class="labels unlist">
                        
                        {{!-- Rank --}}
                        <li class="creature-size">
                            {{#if editable}}
                                <select class="unselect" name="system.details.rank">
                                    {{ selectOptions config.creatureRanks selected=source.details.rank }}
                                </select>
                            {{else}}
                                <span>{{ localize (lookup config.creatureRanks system.details.rank) }}</span>
                            {{/if}}
                        </li>
                        
                        {{!-- Class --}}
                        <li class="creature-size">
                            {{#if editable}}
                                <select class="unselect" name="system.details.classNPC">
                                    {{ selectOptions config.creatureClass selected=source.details.classNPC }}
                                </select>
                            {{else}}
                                <span>{{ localize (lookup config.creatureClass system.details.classNPC) }}</span>
                            {{/if}}
                        </li>

                        {{!-- Role --}}
                        <li class="creature-size">
                            {{#if editable}}
                                <select class="unselect" name="system.details.role">
                                    {{ selectOptions config.creatureRoles selected=source.details.role }}
                                </select>
                            {{else}}
                                <span>{{ localize (lookup config.creatureRoles system.details.role) }}</span>
                            {{/if}}
                        </li>

                        {{!-- Affiliation --}}
                        <li class="creature-size">
                            {{#if editable}}
                                <select class="unselect" name="system.details.affiliation">
                                    {{ selectOptions config.creatureAffiliations selected=source.details.affiliation }}
                                </select>
                            {{else}}
                                <span>{{ localize (lookup config.creatureAffiliations system.details.affiliation) }}</span>
                            {{/if}}
                        </li>

                        {{!-- High Role --}}
                        <li class="creature-size">
                            {{#if editable}}
                                <div class="high-role-checkboxes">
                                    {{#each highRole}}
                                        <label class="checkbox">
                                            <input type="checkbox" name="system.details.highRole.{{@key}}" value="{{@key}}"
                                            {{checked selected}}> 
                                            {{localize label}}
                                        </label>
                                    {{/each}}
                                </div>
                            {{else}}
                                <span>
                                    {{#each highRole}}
                                        {{#if this.selected}}
                                            {{#if @first}}
                                                {{localize this.label}}
                                            {{else}}
                                                , {{localize this.label}}
                                            {{/if}}
                                        {{/if}}
                                    {{/each}}
                                </span>
                            {{/if}}
                        </li>

                    </ul>
                    {{/if}}

                    {{#if (eq system.details.npcType "summon")}}

                    <ul class="labels unlist">

                        {{!-- Rank --}}
                        <li class="creature-size">
                            {{#if editable}}
                                <select class="unselect rank-select" name="system.details.rank" data-action="summonRankChange">
                                    {{ selectOptions config.summonRanks selected=source.details.rank }}
                                </select>
                            {{else}}
                                <span>{{ localize (lookup config.summonRanks system.details.rank) }}</span>
                            {{/if}}
                        </li>

                        <li class="creature-size">
                            {{#if editable}}
                                <select class="unselect" name="system.details.role">
                                    {{ selectOptions config.summonRoles selected=source.details.role }}
                                </select>
                            {{else}}
                                <span>{{ localize (lookup config.summonRoles system.details.role) }}</span>
                            {{/if}}
                        </li>

                    </ul>
                    
                    {{/if}}


                </div>

                {{!-- Resting, Special Traits, & Proficiency --}}
                {{#if actor.isOwner}}
                <div class="right">

                    <div class="left">

                        <div class="sheet-header-buttons">
                            <button type="button" class="short-rest gold-button" data-tooltip="N5EB.ShortRest"
                                    aria-label="{{ localize "N5EB.ShortRest" }}">
                                <i class="fas fa-utensils"></i>
                            </button>
                            <button type="button" class="long-rest gold-button" data-tooltip="N5EB.LongRest"
                                    aria-label="{{ localize "N5EB.LongRest" }}">
                                <i class="fas fa-campground"></i>
                            </button>
                            <button type="button" class="config-button gold-button" data-action="flags"
                                    data-tooltip="N5EB.SpecialTraits"
                                    aria-label="{{ localize "N5EB.SpecialTraits" }}">
                                <i class="fas fa-star"></i>
                            </button>
                        </div>

                        <div class="proficiency">
                            <span>{{ localize "N5EB.Proficiency" }}</span>
                            <strong>{{ n5eb-formatModifier system.attributes.prof }}</strong>
                        </div>

                    </div>

                    {{!-- CR --}}
                    <div class="right cr-badge badge" aria-label="{{ localize "N5EB.CRLabel" cr=system.details.cr }}"
                         {{#unless editable}}data-tooltip="N5EB.NPCLevel"{{/unless}}>
                        {{#if editable}}
                        <input type="text" class="uninput" name="system.details.cr" value="{{ source.details.cr }}">
                        {{else}}
                        {{{ n5eb-formatCR system.details.cr }}}
                        {{/if}}
                    </div>

                </div>
                {{/if}}

            </div>

            {{!-- Ability Scores --}}
            <div class="middle ability-scores card flexrow">
                {{#each abilities}}
                <div class="ability-score" data-ability="{{ key }}">
                    {{#if icon}}<img src="{{ icon }}" alt="{{ label }}">{{/if}}
                    <a class="label {{ @root.rollableClass }} ability-check">{{ abbr }}</a>
                    <div class="mod">
                        {{#if @root.editable}}
                        <a class="config-button" data-action="ability"
                           data-tooltip="{{ localize "N5EB.AbilityConfigure" ability=label }}"
                           aria-label="{{ localize "N5EB.AbilityConfigure" ability=label }}">
                            <i class="fas fa-cog"></i>
                        </a>
                        {{else}}
                        {{ n5eb-formatModifier mod }}
                        {{/if}}
                    </div>
                    <div class="score">
                        {{#if @root.editable}}
                        <input type="text" name="system.abilities.{{ key }}.value" value="{{ baseValue }}"
                               placeholder="10" data-dtype="Number" class="uninput">
                        {{else}}
                        {{ value }}
                        {{/if}}
                    </div>
                    <div class="save-tab saving-throw {{#unless @root.editable}}{{ @root.rollableClass }}{{/unless}}"
                         {{#unless @root.editable}}data-tooltip="{{ localize "N5EB.SavingThrowRoll" ability=label }}"
                         aria-label="{{ localize "N5EB.SavingThrowRoll" ability=label }}"{{/unless}}>
                        <proficiency-cycle type="ability" name="{{ concat "system.abilities." key ".proficient" }}"
                                           data-tooltip="{{ hover }}" aria-label="{{ localize hover }}"
                                           value="{{#if @root.editable}}{{ baseProf }}{{else}}{{ proficient }}{{/if}}"
                                           {{ disabled (not @root.editable) }}></proficiency-cycle>
                        <span class="save">{{ n5eb-formatModifier save }}</span>
                        <i class="fas fa-shield-heart" inert></i>
                    </div>
                </div>
                {{/each}}
            </div>

            {{!-- Legendary Actions & Resistances, Lair Actions, & Classes --}}
            <div class="bottom">

                {{#if hasClasses}}
                {{> "n5eb.actor-classes" }}
                {{/if}}

                {{#if (or hasLegendaries editable)}}
                    <div class="legendary">
                        {{#if editable}}
                            <label class="legact">
                                <span class="label roboto-upper">{{ localize "N5EB.LegAct" }}</span>
                                {{ numberInput source.resources.legact.max name="system.resources.legact.max" step=1 min=0 }}
                            </label>
                            <label class="legres">
                                <span class="label roboto-upper">{{ localize "N5EB.LegRes" }}</span>
                                {{ numberInput source.resources.legres.max name="system.resources.legres.max" step=1 min=0 }}
                            </label>
                            <label class="lair">
                                <span class="label roboto-upper">{{ localize "N5EB.LairActionLabel" }}</span>
                                {{ numberInput source.resources.lair.initiative name="system.resources.lair.initiative"
                                            placeholder="—" step=1 min=0 }}
                            </label>
                            <label class="tenacity">
                                <span class="label roboto-upper">{{ localize "N5EB.TenacityDice" }}</span>
                                {{ numberInput source.resources.tenacity.max name="system.resources.tenacity.max" step=1 min=0 }}
                            </label>
                            {{else}}
                            {{#if system.resources.legact.max}}
                            <div class="legact">
                                <span class="label roboto-upper">{{ localize "N5EB.LegAct" }}</span>
                                <div class="pips" data-prop="system.resources.legact.value">
                                    {{#each legact}}
                                        {{> pip }}
                                    {{/each}}
                                </div>
                            </div>
                            {{/if}}
                            {{#if system.resources.legres.max}}
                            <div class="legres">
                                <span class="label roboto-upper">{{ localize "N5EB.LegRes" }}</span>
                                <div class="pips" data-prop="system.resources.legres.value">
                                    {{#each legres}}
                                        {{> pip }}
                                    {{/each}}
                                </div>
                            </div>
                            {{/if}}
                            {{#if system.resources.lair.initiative}}
                            <label class="lair">
                                <span class="label roboto-upper">{{ localize "N5EB.LairActionLabel" }}</span>
                                <span class="value">{{ system.resources.lair.initiative }}</span>
                            </label>
                            {{/if}}
                            {{#if system.resources.tenacity.max}}
                                <div class="tenacity">
                                    <span class="label roboto-upper">{{ localize "N5EB.TenacityDice" }}</span>
                                    <div class="pips" data-prop="system.resources.tenacity.value">
                                        {{#each tenacity}}
                                        {{> pip }}
                                        {{/each}}
                                    </div>
                                </div>
                            {{/if}}
                        {{/if}}
                    </div>
                {{/if}}

            </div>

            

        </div>

    </header>

    {{!-- Body --}}
    <section class="sheet-body">

        {{!-- Main Content --}}
        <div class="main-content">

            {{!-- Sidebar Collapser --}}
            <button type="button" class="sidebar-collapser unbutton interface-only"
                {{#if sidebarCollapsed}}
                data-tooltip="JOURNAL.ViewExpand" aria-label="{{ localize "JOURNAL.ViewExpand" }}"
                {{else}}
                data-tooltip="JOURNAL.ViewCollapse" aria-label="{{ localize "JOURNAL.ViewCollapse" }}"
                {{/if}}>
                <i class="fas fa-caret-{{#if sidebarCollapsed}}right{{else}}left{{/if}}"></i>
            </button>

            {{!-- Sidebar --}}
            <div class="sidebar">

                {{!-- Speed --}}
                <div class="pills-group {{#unless speed}}empty{{/unless}}">
                    <h3 class="icon">
                        <i class="fas fa-shoe-prints"></i>
                        <span class="roboto-upper">{{ localize "N5EB.Speed" }}</span>
                        {{#if editable}}
                        <a class="config-button" data-action="movement" data-tooltip="N5EB.MovementConfig"
                           aria-label="{{ localize "N5EB.MovementConfig" }}">
                            <i class="fas fa-cog"></i>
                        </a>
                        {{/if}}
                    </h3>
                    <ul class="pills">
                        {{#each speed}}
                        <li class="pill">
                            {{#each icons}}
                            <i class="{{ icon }}" data-tooltip="{{ label }}" aria-label="{{ label }}"></i>
                            {{/each}}
                            <span class="label">{{ label }}</span>
                            {{#if value}}
                            <span class="separator">&vert;</span>
                            <span class="value">{{ value }}</span>
                            {{/if}}
                        </li>
                        {{/each}}
                    </ul>
                </div>

                {{!-- Skills --}}
                <div class="pills-group {{#unless skills}}empty{{/unless}}">
                    <h3 class="icon">
                        <i class="fas fa-briefcase"></i>
                        <span class="roboto-upper">{{ localize "N5EB.Skills" }}</span>
                        {{#if editable}}
                        <a class="config-button" data-action="skills" data-tooltip="N5EB.SkillsConfig"
                           aria-label="{{ localize "N5EB.SkillsConfig" }}">
                            <i class="fas fa-cog"></i>
                        </a>
                        {{/if}}
                    </h3>
                    <ul class="pills">
                        {{#each skills}}
                        <li class="pill">
                            <a class="{{ @root.rollableClass }} skill-name" data-key="{{ @key }}">
                                <span class="label">{{ label }}</span>
                                <span class="separator">&vert;</span>
                                <span class="value">{{ n5eb-numberFormat total signDisplay="always" }}</span>
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                </div>

                {{!-- Senses --}}
                <div class="pills-group {{#unless senses}}empty{{/unless}}">
                    <h3 class="icon">
                        <i class="fas fa-eye"></i>
                        <span class="roboto-upper">{{ localize "N5EB.Senses" }}</span>
                        {{#if editable}}
                        <a class="config-button" data-action="senses" data-tooltip="N5EB.SensesConfig"
                           aria-label="{{ localize "N5EB.SensesConfig" }}">
                            <i class="fas fa-cog"></i>
                        </a>
                        {{/if}}
                    </h3>
                    <ul class="pills">
                        {{#each senses}}
                        <li class="pill">
                            <span class="label">{{ label }}</span>
                            {{#if value}}
                            <span class="separator">&vert;</span>
                            <span class="value">{{ value }}</span>
                            {{/if}}
                        </li>
                        {{/each}}
                    </ul>
                </div>

                {{!-- Resistances --}}
                {{> "n5eb.actor-trait-pills" values=traits.dr key="dr" color="green" icon="fas fa-shield-halved"
                    label="N5EB.Resistances" }}

                {{!-- Immunities --}}
                {{#if editable}}
                    {{> "n5eb.actor-trait-pills" values=traits.di key="di" color="green" icon="fas fa-shield"
                        label="N5EB.DamImm" }}
                {{else}}
                    {{> "n5eb.actor-trait-pills" values=traits.di key="di" color="green" icon="fas fa-shield"
                        label="N5EB.Immunities" }}
                {{/if}}
                {{> "n5eb.actor-trait-pills" values=traits.ci key="ci" color="green" svg="rosa-shield"
                    label="N5EB.ConImm" }}

                {{!-- Vulnerabilities --}}
                {{> "n5eb.actor-trait-pills" values=traits.dv key="dv" color="maroon" icon="fas fa-heart-crack"
                    label="N5EB.Vulnerabilities" }}

                {{!-- Damage Modification --}}
                {{> "n5eb.actor-trait-pills" values=traits.dm key="dm" icon="fas fa-heart-circle-plus"
                    label="N5EB.DamageModification.Label" }}

                {{!-- Languages --}}
                {{> "n5eb.actor-trait-pills" values=traits.languages key="languages" icon="fas fa-flag"
                    label="N5EB.Languages" }}

                {{!-- Affinity --}}
                {{> "n5eb.actor-trait-pills" values=traits.affinity key="affinity" icon="fas fa-bolt"
                    label="N5EB.Affinity" }}

            </div>

            {{!-- Tabbed Content --}}
            <section class="tab-body">

                {{!-- Features --}}
                <div class="tab features" data-group="primary" data-tab="features">
                    {{> "n5eb.creature-features" sections=features.sections filters=features.filters }}
                </div>

                {{!-- Inventory --}}
