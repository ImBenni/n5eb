<section class="classes pills-lg {{#if @root.editable}}editing{{/if}}">
    {{#each classmods as |cls|}}
    {{#if (eq cls.type "classmod")}}
    {{#n5eb-itemContext cls as |ctx|}}
    <div class="class pill-lg" data-item-id="{{ cls.id }}" style="--underlay: url('{{ ctx.prefixedImage }}');">
        <div class="icons">
            <img class="gold-icon item-tooltip" src="{{ cls.img }}" alt="{{ cls.name }}" data-action="edit"
                 data-item-id="{{ cls.id }}">
            {{#if @root.editable}}
            <div class="controls">
                <a class="deletion-control item-control item-action" data-action="delete"
                   data-tooltip="N5EB.ItemDelete" data-item-id="{{ cls.id }}"
                   aria-label="{{ localize "N5EB.ItemDelete" }}">
                    <i class="fas fa-circle-xmark"></i>
                </a>
            </div>
            {{/if}}
        </div>
        <div class="name-stacked">
            <div class="title">{{ cls.name }}</div>
        </div>
        <div class="level">
            {{#if @root.editable}}
            <select class="cm-level-selector">
                {{#select 0}}
                {{#each ctx.availableCMLevels}}
                <option value="{{ delta }}" {{ disabled this.disabled }}>
                    {{ level }}
                    {{#if delta}}({{ n5eb-numberFormat delta signDisplay="always"}}){{/if}}
                </option>
                {{/each}}
                {{/select}}
            </select>
            {{else}}
            <span>{{ cls.system.levels }}</span>
            {{/if}}
        </div>
    </div>
    {{/n5eb-itemContext}}
    {{/if}}
    {{/each}}
</section>
