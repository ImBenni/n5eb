<form autocomplete="off" class="drop-target">
    <div class="left-column">
        {{> "n5eb.advancement-controls" }}

        <div class="form-group">
            <label>{{ localize "N5EB.AdvancementConfigureAllowDrops" }}</label>
            <div class="form-fields">
                <input type="checkbox" name="configuration.allowDrops" {{ checked configuration.allowDrops }}>
            </div>
            <p class="hint">{{ localize "N5EB.AdvancementConfigureAllowDropsHint" }}</p>
        </div>

        <div class="form-group">
            <label>{{ localize "N5EB.AdvancementItemChoiceType" }}</label>
            <div class="form-fields">
                <select name="configuration.type">
                    {{ selectOptions validTypes selected=configuration.type
                                     blank=(localize "N5EB.AdvancementItemChoiceTypeAny") }}
                </select>
            </div>
            <p class="hint">{{ localize "N5EB.AdvancementItemChoiceTypeHint" }}</p>
        </div>

        {{#if typeRestriction}}
        <div class="form-group">
            <label>{{typeRestriction.typeLabel}}</label>
            <div class="form-fields">
                <select name="configuration.restriction.type">
                    {{ selectOptions typeRestriction.typeOptions selected=configuration.restriction.type
                                     labelAttr="label" blank="—" }}
                </select>
            </div>
        </div>

        {{#if typeRestriction.subtypeOptions}}
        <div class="form-group">
            <label>{{ typeRestriction.subtypeLabel }}</label>
            <div class="form-fields">
                <select name="configuration.restriction.subtype">
                    {{ selectOptions typeRestriction.subtypeOptions selected=configuration.restriction.subtype
                                     blank="—" }}
                </select>
            </div>
        </div>
        
        {{#if typeRestriction.nestedsubtypeOptions}}
        <div class="form-group">
            <label>{{ typeRestriction.nestedsubtypeLabel }}</label>
            <div class="form-fields">
                <select name="configuration.restriction.nestedsubtype">
                    {{ selectOptions typeRestriction.nestedsubtypeOptions selected=configuration.restriction.nestedsubtype
                                     blank="—" }}
                </select>
            </div>
        </div>
        {{/if}}
        {{/if}}
        {{/if}}

        {{#if showSpellConfig}}
            <div class="form-group">
                <label>{{ localize "N5EB.SpellLevel" }}</label>
                <div class="form-fields">
                    <select name="configuration.restriction.level">
                        {{#select configuration.restriction.level}}
                        <option value="">&mdash;</option>
                        {{#each CONFIG.spellLevels}}
                        <option value="{{ @key }}">{{ this }}</option>
                        {{/each}}
                        <option value="available">
                            {{ localize "N5EB.AdvancementItemChoiceSpellLevelAvailable" }}
                        </option>
                        {{/select}}
                    </select>
                </div>
                <p class="hint">{{localize "N5EB.AdvancementItemChoiceSpellLevelHint"}}</p>
            </div>

            {{> "n5eb.advancement-spell-config"}}
        {{/if}}
    </div>

    <div class="center-column">
        <ol class="items-list">
            <li class="items-header flexrow"><h3 class="item-name">{{ localize "DOCUMENT.Items" }}</h3></li>
            {{#each configuration.pool}}
            <li class="item flexrow" data-item-uuid="{{ uuid }}">
                <div class="item-name">{{{ n5eb-linkForUuid uuid }}}</div>
                <div class="item-controls flexrow">
                    <a class="item-control item-action" data-action="delete" data-tooltip="N5EB.ItemDelete"
                       aria-label="{{ localize 'N5EB.ItemDelete' }}">
                        <i class="fas fa-trash" inert></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
        
        {{#if showContainerWarning}}
        <p class="hint centered warning">{{ localize "N5EB.AdvancementItemGrantContainerWarning" }}</p>
        {{/if}}
        <p class="hint centered">{{ localize "N5EB.AdvancementConfigureDropAreaHint" }}</p>
    </div>

    <div class="right-column level-list">
        <ol class="items-list">
            <li class="items-header flexrow">
                <span class="level-header">
                    {{ localize "N5EB.AbbreviationLevel" }}
                </span>
                <span id="{{ appId }}-choices" class="choices-header">
                    {{ localize "N5EB.AdvancementItemChoiceChoices" }}
                </span>
                <span id="{{ appId }}-replacement" class="replacement-header">
                    <i class="fa-solid fa-shuffle" data-tooltip="N5EB.AdvancementItemChoiceReplacement"
                       aria-label="{{ localize 'N5EB.AdvancementItemChoiceReplacement' }}"></i>
                </span>
            </li>
        </ol>
        {{#each choices}}
        <div class="form-group">
            <label>{{ label }}</label>
            <div class="form-fields">
                <input type="number" name="configuration.choices.{{ @key }}.count" value="{{ count }}" placeholder="0"
                       min="1" step="1" aria-labelledby="{{ @root.appId }}-choices">
                <input type="checkbox" name="configuration.choices.{{ @key }}.replacement"
                       {{ checked replacement }} aria-labelledby="{{ @root.appId }}-replacement">
            </div>
        </div>
        {{/each}}
    </div>
</form>
