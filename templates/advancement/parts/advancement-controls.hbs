<div class="form-group">
    <label>{{ localize "N5EB.AdvancementCustomTitle" }}</label>
    <div class="form-fields">
        <input type="text" name="title" value="{{ src.title }}" placeholder="{{ default.title }}">
    </div>
</div>

<div class="form-group">
    <label>{{ localize "N5EB.AdvancementCustomIcon" }}</label>
    <div class="form-fields">
        {{ filePicker type="image" target="icon" }}
        <input type="text" name="icon" value="{{ src.icon }}" placeholder="{{ default.icon }}">
    </div>
</div>

{{#if showClassRestrictions}}
<div class="form-group">
    <label>{{ localize "N5EB.AdvancementClassRestriction" }}</label>
    <div class="form-fields">
        <select name="classRestriction">
            {{#select classRestriction}}
            <option value="">{{ localize "N5EB.AdvancementClassRestrictionNone" }}</option>
            <option value="primary">{{ localize "N5EB.AdvancementClassRestrictionPrimary" }}</option>
            <option value="secondary">{{ localize "N5EB.AdvancementClassRestrictionSecondary" }}</option>
            {{/select}}
        </select>
    </div>
</div>
{{/if}}

{{#if showLevelSelector}}
<div class="form-group">
    <label>{{ localize "N5EB.Level" }}</label>
    <div class="form-fields">
        <select name="level" data-dtype="Number">
            {{ selectOptions levels selected=level }}
        </select>
    </div>
</div>
{{/if}}

<div class="form-group">
    <label>{{ localize "N5EB.AdvancementHint" }}</label>
    <textarea name="hint" {{~#if default.hint}} placeholder="{{ default.hint }}"{{/if}}>{{ hint }}</textarea>
</div>
