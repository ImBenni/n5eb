{{!-- Activation Cost --}}
<div class="form-group input-select">
    <label>{{ localize "N5EB.ItemActivationCost" }}</label>
    <div class="form-fields">
        {{#if (and system.activation.type (not isCostlessAction))}}
            <input type="number" step="any" name="system.activation.cost"
                   value="{{system.activation.cost}}" placeholder="&mdash;">
        {{/if}}
        <select name="system.activation.type" data-tooltip="N5EB.ItemActivationType">
            {{selectOptions config.abilityActivationTypes selected=system.activation.type blank=""}}
        </select>
    </div>
</div>
{{#if system.activation.type}}

{{!-- Activation Condition --}}
<div class="form-group">
    <label>{{ localize "N5EB.ItemActivationCondition" }}</label>
    <div class="form-fields">
        <input type="text" name="system.activation.condition" value="{{system.activation.condition}}">
    </div>
</div>

{{#if isCrewed}}
<div class="form-group">
    <label>{{ localize "N5EB.Cover" }}</label>
    <div class="form-fields">
        <select name="system.cover" data-dtype="Number">
            {{selectOptions config.cover selected=system.cover blank=""}}
        </select>
    </div>
</div>
{{/if}}

{{!-- Ability Target --}}
<div class="form-group input-select-select">
    <label>{{ localize "N5EB.Target" }}</label>
    <div class="form-fields">
        {{#if system.hasScalarTarget}}
            <input type="text" name="system.target.value" value="{{source.target.value}}"
                   placeholder="&mdash;" data-formula-editor>
        {{/if}}
        {{#if system.hasAreaTarget}}
            <select name="system.target.units" data-tooltip="N5EB.TargetUnits">
                {{selectOptions config.movementUnits selected=system.target.units blank=""}}
            </select>
        {{/if}}
        <select name="system.target.type" data-tooltip="N5EB.TargetType">
            {{#select system.target.type}}
                 <option value="">{{localize "N5EB.None"}}</option>
                 <optgroup label="{{localize 'N5EB.TargetTypeIndividual'}}">
                     {{selectOptions config.individualTargetTypes}}
                 </optgroup>
                 <optgroup label="{{localize 'N5EB.TargetTypeArea'}}">
                     {{selectOptions config.areaTargetTypes labelAttr="label"}}
                 </optgroup>
            {{/select}}
        </select>
    </div>
</div>

{{!-- Ability Target Width --}}
{{#if isLine}}
<div class="form-group input-select-select">
    <label>{{ localize "N5EB.TargetWidth" }}</label>
    <div class="form-fields">
        <input type="number" step="any" name="system.target.width"
            value="{{system.target.width}}" placeholder="&mdash;">
    </div>
</div>
{{/if}}

{{!-- Ability Range --}}
<div class="form-group input-select">
    <label>{{ localize "N5EB.Range" }}</label>
    <div class="form-fields">
        {{#if system.hasScalarRange}}
            <input type="number" step="any" name="system.range.value" value="{{system.range.value}}"
                   placeholder="{{localize 'N5EB.Normal'}}" data-tooltip="N5EB.RangeNormal">
            <span class="sep">/</span>
            <input type="number" step="any" name="system.range.long" value="{{system.range.long}}"
                   placeholder="{{localize 'N5EB.Long'}}" data-tooltip="N5EB.RangeLong">
        {{/if}}
        <select name="system.range.units" data-tooltip="N5EB.RangeUnits">
            {{#select system.range.units}}
                <option value="">{{localize "N5EB.None"}}</option>
                <optgroup label="{{localize 'N5EB.RangeDistance'}}">
                    {{selectOptions config.movementUnits}}
                </optgroup>
                {{selectOptions config.rangeTypes}}
            {{/select}}
        </select>
    </div>
</div>

{{!-- Effect Duration --}}
<div class="form-group input-select">
    <label>{{ localize "N5EB.Duration" }}</label>
    <div class="form-fields">
        {{#if system.hasScalarDuration}}
            <input type="text" name="system.duration.value" value="{{source.duration.value}}"
                   placeholder="&mdash;" data-tooltip="N5EB.DurationValue" data-formula-editor>
        {{/if}}
        <select name="system.duration.units" data-tooltip="N5EB.DurationType">
            {{#select system.duration.units}}
                <option value="">{{localize "N5EB.None"}}</option>
                <optgroup label="{{localize 'N5EB.DurationTime'}}">
                    {{selectOptions config.scalarTimePeriods}}
                </optgroup>
                <optgroup label="{{localize 'N5EB.DurationPermanent'}}">
                    {{selectOptions config.permanentTimePeriods}}
                </optgroup>
                {{selectOptions config.specialTimePeriods}}
            {{/select}}
        </select>
    </div>
</div>

{{!-- Limited Uses --}}
<div class="form-group uses-per">
    <label>{{ localize "N5EB.LimitedUses" }}</label>
    <div class="form-fields">
        {{#if system.uses.per}}
        <input type="number" step="any" name="system.uses.value"
               value="{{system.uses.value}}" data-tooltip="N5EB.UsesAvailable">
        <span class="sep">{{localize "N5EB.of"}}</span>
        <input type="text" name="system.uses.max" value="{{source.uses.max}}"
               data-tooltip="N5EB.UsesMax" data-formula-editor>
        <span class="sep">{{localize "N5EB.per"}}</span>
        {{/if}}
        <select name="system.uses.per" data-tooltip="N5EB.UsesPeriod">
            {{selectOptions config.limitedUsePeriods selected=system.uses.per labelAttr="label" blank=(localize "N5EB.None")}}
        </select>
    </div>
</div>

{{#if isFormulaRecharge}}
<div class="form-group">
    <label>{{localize "N5EB.RecoveryFormula"}}</label>
    <div class="form-fields">
        <input type="text" name="system.uses.recovery" value="{{system.uses.recovery}}" data-formula-editor>
    </div>
</div>
{{/if}}

{{!-- Consumption --}}
<div class="form-group consumption">
    <label>{{ localize "N5EB.ConsumeTitle" }}</label>
    <div class="form-fields">
        {{#if system.consume.type}}
            <input type="number" step="any" name="system.consume.amount" value="{{system.consume.amount}}"
                   data-tooltip="N5EB.ConsumeAmount" placeholder="{{ localize 'N5EB.QuantityAbbr' }}">
            {{#if abilityConsumptionHint}}
            <input type="text" name="system.consume.target" value="{{ system.consume.target }}"
                   placeholder="{{ localize abilityConsumptionHint }}">
            {{else}}
            <select name="system.consume.target" data-tooltip="N5EB.ConsumeTarget">
                {{selectOptions abilityConsumptionTargets selected=system.consume.target blank=""}}
            </select>
            {{/if}}
        {{/if}}
        <select name="system.consume.type" data-tooltip="N5EB.ConsumeType">
            {{selectOptions config.abilityConsumptionTypes selected=system.consume.type blank=(localize "N5EB.None")}}
        </select>
    </div>
</div>

{{!-- Prompt Configuration --}}
<div class="form-group">
    {{#if (eq item.type "consumable")}}
    <label class="checkbox" data-tooltip="N5EB.ItemDestroyEmptyTooltip">
        <input type="checkbox" name="system.uses.autoDestroy" {{checked system.uses.autoDestroy}}> {{ localize "N5EB.ItemDestroyEmpty" }}
    </label>
    {{/if}}
    {{#if item.hasAreaTarget}}
    <label class="checkbox" data-tooltip="N5EB.TemplatePromptTooltip">
        <input type="checkbox" name="system.target.prompt" {{checked system.target.prompt}}> {{ localize "N5EB.TemplatePrompt" }}
    </label>
    {{/if}}
    {{#if system.uses.per}}
    <label class="checkbox" data-tooltip="N5EB.LimitedUsesPromptTooltip">
        <input type="checkbox" name="system.uses.prompt" {{checked system.uses.prompt}}> {{ localize "N5EB.LimitedUsesPrompt" }}
    </label>
    {{/if}}
    {{#if (and (eq item.type "spell") system.consume.type)}}
    <label class="checkbox" data-tooltip="N5EB.ConsumeScalingTooltip">
        <input type="checkbox" name="system.consume.scale" {{checked system.consume.scale}}> {{ localize "N5EB.ConsumeScaling" }}
    </label>
    {{/if}}
</div>

{{!-- Recharge Requirement --}}
    {{#if system.activation.type}}
    <div class="form-group recharge">
        <label>{{ localize "N5EB.FeatureActionRecharge" }}</label>
        <div class="form-fields">
            <span>{{ localize "N5EB.FeatureRechargeOn" }}</span>
            {{numberInput system.recharge.value name="system.recharge.value"
                        placeholder=(localize "N5EB.FeatureRechargeResult")}}
            <input type="text" name="system.recharge.formula" value="{{system.recharge.formula}}" placeholder="1d8">
            <label class="checkbox">
                {{ localize "N5EB.Charged" }}
                <input type="checkbox" name="system.recharge.charged" {{checked system.recharge.charged}}>
            </label>
        </div>
    </div>
    {{/if}}
{{/if}}
