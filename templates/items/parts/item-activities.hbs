<div class="tab activities" data-group="primary" data-tab="activities">
    {{#each activities}}
    <div class="activity card" data-activity-id="{{ id }}">

        {{!-- Icon --}}
        <div class="icon {{#if img.svg}}svg{{/if}}">
            {{#if img.svg}}
            <n5eb-icon src="{{ img.src }}"></n5eb-icon>
            {{else}}
            <img src="{{ img.src }}" class="gold-icon" alt="{{ name }}">
            {{/if}}
        </div>

        {{!-- Name --}}
        <div class="name">{{ name }}</div>

        {{!-- Controls --}}
        <div class="controls">

            {{#if @root.editable}}
            {{!-- Delete --}}
            <button type="button" class="unbutton control-button" data-action="deleteActivity"
                    data-tooltip="N5EB.ACTIVITY.Action.Delete"
                    aria-label="{{ localize "N5EB.ACTIVITY.Action.Delete" }}">
                <i class="fas fa-trash" inert></i>
            </button>
            {{/if}}
        </div>

    </div>
    {{/each}}
</div>
